<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campaign_activity_card"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/campaign_activity_card_image"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/campaign_activity_card_title"
                tools:text="Backpacks for Alpacas"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_toEndOf="@+id/campaign_activity_card_image"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/campaign_activity_card_desc"
                tools:text="Alpacas have to pack too!"
                android:layout_below="@+id/campaign_activity_card_title"
                android:layout_toEndOf="@+id/campaign_activity_card_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/campaign_activity_card_desc"
                android:layout_toEndOf="@+id/campaign_activity_card_image"
                android:id="@+id/campaign_activity_card_progress"
                tools:text="$3,500.00/$5,000.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/campaign_activity_card_time"
                tools:text="30 Days Left"
                android:layout_alignBaseline="@+id/campaign_activity_card_progress"
                android:layout_alignBottom="@+id/campaign_activity_card_progress"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>